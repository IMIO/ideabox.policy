<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ideabox.policy">
    <body>
        <metal:main fill-slot="main"
                    tal:define="images_url view/get_images_url;
                                time_line view/get_workflow_history;
                                time_line_title view/get_time_line_title;
                                current_state view/get_current_status">
        <h1 tal:content="context/Title"></h1>

        <div id="timeline" class="steps_5">
            <ol id="timeline-line">
                <tal:block tal:repeat="date time_line">
                <li>
                  <div class="step">
                    <tal:block tal:repeat="part_date date">
                          <div tal:content="part_date" />
                    </tal:block>
                  </div>
                </li>
                </tal:block>
            </ol>

            <ol id="timeline-text">
              <tal:block tal:repeat="title time_line_title">
                <li tal:attributes="class python: current_state == title and 'current' or ''"><div tal:content="title"/></li>
              </tal:block>
            </ol>
        </div>
        <div tal:content="structure here/@@rate-if-you-dare"></div>

        <tal:block repeat="widget view/widgets/values">
        <tal:block tal:condition="python:widget.__name__ not in ('IBasic.title', 'IBasic.description', 'title', 'description',)">
        <tal:widget tal:replace="structure widget/@@ploneform-render-widget"/>
        </tal:block>
        </tal:block>
        <div class="faceted-projects-ungrouped-view">
          <div class="event-entry no-view">
            <a href="" title="">
              <tal:block tal:repeat="image_url images_url">
                <div class="pageleadImage" tal:attributes="style string: background-image:url(${image_url})"></div>
              </tal:block>
              <div class="pagecaption">
                  <h3>Diversifier le design et la conception des bancs publics</h3>
              </div>
            </a>
          </div>
          <div class="event-entry no-view">
            <a href="" title="">
              <tal:block tal:repeat="image_url images_url">
                <div class="pageleadImage" tal:attributes="style string: background-image:url(${image_url})"></div>
              </tal:block>
              <div class="pagecaption">
                  <h3>Diversifier le design et la conception des bancs publics</h3>
              </div>
            </a>
          </div>
          <div class="event-entry no-view">
            <a href="" title="">
              <tal:block tal:repeat="image_url images_url">
                <div class="pageleadImage" tal:attributes="style string: background-image:url(${image_url})"></div>
              </tal:block>
              <div class="pagecaption">
                  <h3>Diversifier le design et la conception des bancs publics</h3>
              </div>
            </a>
          </div>
        </div>

        <!--SLIDER -->
        <section id="slider_show">
            <ul class="slider_content elements_5">
                <!--                TARGET-->
                <li id="button_start"></li>
                <li id="button_stop"></li>
                <tal:block tal:repeat="image_url images_url">
                    <li id="button_1"></li>
                    <li id="button_2"></li>
                    <li id="button_3"></li>
                    <li id="button_4"></li>
                    <li id="button_5"></li>
                </tal:block>

                <!--                SLIDE WITH ANIMATION-->
                <li id="slider_images" class="sl_space elements_5">
                    <tal:block tal:repeat="image_url images_url">
                    <div id="slide_1" class="slide" tal:attributes="style string: background-image:url(${image_url})"></div>
                    <div id="slide_2" class="slide" tal:attributes="style string: background-image:url(${image_url})"></div>
                    <div id="slide_3" class="slide" tal:attributes="style string: background-image:url(${image_url})"></div>
                    <div id="slide_4" class="slide" tal:attributes="style string: background-image:url(${image_url})"></div>
                    <div id="slide_5" class="slide" tal:attributes="style string: background-image:url(${image_url})"></div>
                    <!--                    La première image doit être copiée à la fin pour une meilleure transition-->
                    <div id="slide_6" tal:attributes="style string: background-image:url(${image_url})"></div>
                    </tal:block>
                </li>
                <!--                BUTTON-->
                <tal:block tal:repeat="image_url images_url">
                    <li class="button"><a title="Slide 1" href="#button_1"></a></li>
                    <li class="button"><a title="Slide 2" href="#button_2"></a></li>
                    <li class="button"><a title="Slide 3" href="#button_3"></a></li>
                    <li class="button"><a title="Slide 4" href="#button_4"></a></li>
                    <li class="button"><a title="Slide 5" href="#button_5"></a></li>
                </tal:block>
                <li class="pagination" id="index"></li>
                <li class="pagination" id="counter"></li>
                <li id="start"><a title="Start" href="#button_start"></a></li>
                <li id="stop"><a title="Stop" href="#button_stop"></a></li>
            </ul>
        </section>
        </metal:main>
    </body>
</html>

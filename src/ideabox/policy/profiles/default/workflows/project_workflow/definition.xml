<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="plone"
             workflow_id="proejct_workflow"
             title="Project Workflow"
             description=""
             state_variable="review_state"
             initial_state="draft"
             i18n:attributes="title; description">

  <permission>Access contents information</permission>
  <permission>Change portal events</permission>
  <permission>Modify portal content</permission>
  <permission>View</permission>

  <state state_id="draft" title="draft" i18n:attributes="">
    <description i18n:translate="">
      draft
    </description>

    <exit-transition transition_id="deposit"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Owner</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Owner</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="deposited" title="deposited" i18n:attributes="">
    <description i18n:translate="">
      deposited
    </description>

    <exit-transition transition_id="to_be_analysed"/>
    <exit-transition transition_id="retract"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="project_analysis" title="project_analysis" i18n:attributes="">
    <description i18n:translate="">
      project analysis
    </description>

    <exit-transition transition_id="vote"/>
    <exit-transition transition_id="deposit"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="vote" title="vote" i18n:attributes="">
    <description i18n:translate="">
      vote
    </description>

    <exit-transition transition_id="vote_analysis"/>
    <exit-transition transition_id="to_be_analysed"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="result_analysis" title="result_analysis" i18n:attributes="">
    <description i18n:translate="">
      result analysis
    </description>

    <exit-transition transition_id="accept"/>
    <exit-transition transition_id="reject"/>
    <exit-transition transition_id="vote"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="selected" title="selected" i18n:attributes="">
    <description i18n:translate="">
      selected
    </description>

    <exit-transition transition_id="study"/>
    <exit-transition transition_id="progress"/>
    <exit-transition transition_id="realise"/>
    <exit-transition transition_id="vote_analysis"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="rejected" title="rejected" i18n:attributes="">
    <description i18n:translate="">
      rejected
    </description>

    <exit-transition transition_id="vote_analysis"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="study_in_progress" title="study_in_progress" i18n:attributes="">
    <description i18n:translate="">
      study in progress
    </description>

    <exit-transition transition_id="progress"/>
    <exit-transition transition_id="realise"/>
    <exit-transition transition_id="back_accepted"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="in_progress" title="in_progress" i18n:attributes="">
    <description i18n:translate="">
      in progress
    </description>

    <exit-transition transition_id="realise"/>
    <exit-transition transition_id="back_in_study"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="realised" title="realised" i18n:attributes="">
    <description i18n:translate="">
      realised
    </description>

    <exit-transition transition_id="back_in_progress"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <transition transition_id="deposit"
              new_state="deposited"
              title="deposit"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     deposit
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=deposit"
          category="workflow"
          i18n:translate="">deposit</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="retract"
              new_state="draft"
              title="retract"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     retract
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=retract"
          category="workflow"
          i18n:translate="">retract</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="to_be_analysed"
              new_state="project_analysis"
              title="to_be_analysed"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     to be analysed
  </description>
   <action url="%(content_url)s/content_status_modify?workflow_action=to_be_analysed"
        category="workflow"
        i18n:translate="">to be analysed</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="vote"
              new_state="vote"
              title="vote"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     vote
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=vote"
        category="workflow"
        i18n:translate="">vote</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="vote_analysis"
              new_state="result_analysis"
              title="vote_analysis"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     vote analysis
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=vote_analysis"
        category="workflow"
        i18n:translate="">vote analysis</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="accept"
              new_state="selected"
              title="accept"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     accept
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=accept"
        category="workflow"
        i18n:translate="">accept</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_accepted"
              new_state="selected"
              title="back_accepted"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     back accepted
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_accepted"
        category="workflow"
        i18n:translate="">back accepted</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="reject"
              new_state="rejected"
              title="reject"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     reject
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=reject"
        category="workflow"
        i18n:translate="">reject</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="study"
              new_state="study_in_progress"
              title="study"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     study
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=study"
        category="workflow"
        i18n:translate="">study</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_in_study"
              new_state="study_in_progress"
              title="back_in_study"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     back in study
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_study"
        category="workflow"
        i18n:translate="">back in study</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="progress"
              new_state="in_progress"
              title="progress"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     progress
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=progress"
        category="workflow"
        i18n:translate="">progress</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_in_progress"
              new_state="in_progress"
              title="back_in_progress"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     back in progress
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_progress"
        category="workflow"
        i18n:translate="">back in progress</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="realise"
              new_state="realised"
              title="realise"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="">
  <description i18n:translate="">
     realise
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=realise"
        category="workflow"
        i18n:translate="">realise</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <variable variable_id="action"         for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    Previous transition
  </description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor"          for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    The ID of the user who performed the last transition
  </description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description i18n:translate="">
    Provides access to workflow history
  </description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time"           for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    When the previous transition was performed
  </description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>

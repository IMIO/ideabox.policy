<?xml version="1.0"?>
<dc-workflow xmlns:i18n="http://xml.zope.org/namespaces/i18n"
             i18n:domain="ideabox.policy"
             workflow_id="project_workflow"
             title="Project Workflow"
             description=""
             state_variable="review_state"
             initial_state="draft"
             i18n:attributes="title; description">

  <permission>Access contents information</permission>
  <permission>Change portal events</permission>
  <permission>Modify portal content</permission>
  <permission>View</permission>

  <state state_id="draft" title="draft" i18n:attributes="title draft">
    <description i18n:translate="draft">
      Draft
    </description>

    <exit-transition transition_id="deposit"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Owner</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Owner</permission-role>
      <permission-role>Editor</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="deposited" title="deposited" i18n:attributes="title deposited">
    <description i18n:translate="deposited">
      Deposited
    </description>

    <exit-transition transition_id="to_be_analysed"/>
    <exit-transition transition_id="retract"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="project_analysis" title="project_analysis" i18n:attributes="title project_analysis">
    <description i18n:translate="project_analysis">
      Project analysis
    </description>

    <exit-transition transition_id="vote"/>
    <exit-transition transition_id="deposit"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="vote" title="vote" i18n:attributes="title vote">
    <description i18n:translate="vote">
      Vote
    </description>

    <exit-transition transition_id="vote_analysis"/>
    <exit-transition transition_id="to_be_analysed"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="result_analysis" title="result_analysis" i18n:attributes="title result_analysis">
    <description i18n:translate="result_analysis">
      Result analysis
    </description>

    <exit-transition transition_id="accept"/>
    <exit-transition transition_id="reject"/>
    <exit-transition transition_id="vote"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="selected" title="selected" i18n:attributes="title selected">
    <description i18n:translate="selected">
      Selected
    </description>

    <exit-transition transition_id="study"/>
    <exit-transition transition_id="progress"/>
    <exit-transition transition_id="realize"/>
    <exit-transition transition_id="vote_analysis"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="rejected" title="rejected" i18n:attributes="title rejected">
    <description i18n:translate="rejected">
      Rejected
    </description>

    <exit-transition transition_id="vote_analysis"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="study_in_progress" title="study_in_progress" i18n:attributes="title study_in_progress">
    <description i18n:translate="study_in_progress">
      Study in progress
    </description>

    <exit-transition transition_id="progress"/>
    <exit-transition transition_id="realize"/>
    <exit-transition transition_id="back_accepted"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="in_progress" title="in_progress" i18n:attributes="title in_progress">
    <description i18n:translate="in_progress">
      In progress
    </description>

    <exit-transition transition_id="realize"/>
    <exit-transition transition_id="back_in_study"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <state state_id="realized" title="realized" i18n:attributes="title realized">
    <description i18n:translate="realized">
      Realized
    </description>

    <exit-transition transition_id="back_in_progress"/>

    <permission-map name="Access contents information" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
    <permission-map name="Change portal events" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="Modify portal content" acquired="False">
      <permission-role>Manager</permission-role>
      <permission-role>Reviewer</permission-role>
      <permission-role>Site Administrator</permission-role>
    </permission-map>
    <permission-map name="View" acquired="False">
      <permission-role>Anonymous</permission-role>
    </permission-map>
  </state>

  <transition transition_id="deposit"
              new_state="deposited"
              title="deposit"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="deposit">
  <description i18n:translate="deposit">
     Deposit
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=deposit"
          category="workflow"
          i18n:translate="deposit">Deposit</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="retract"
              new_state="draft"
              title="retract"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="retract">
  <description i18n:translate="retract">
     Retract
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=retract"
          category="workflow"
          i18n:translate="retract">Retract</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="to_be_analysed"
              new_state="project_analysis"
              title="to_be_analysed"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="to_be_analysed">
  <description i18n:translate="to_be_analysed">
     To be analysed
  </description>
   <action url="%(content_url)s/content_status_modify?workflow_action=to_be_analysed"
        category="workflow"
        i18n:translate="to_be_analysed">To be analysed</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="vote"
              new_state="vote"
              title="vote"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="vote">
  <description i18n:translate="vote">
     Vote
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=vote"
        category="workflow"
        i18n:translate="vote">Vote</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="vote_analysis"
              new_state="result_analysis"
              title="vote_analysis"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="vote_analysis">
  <description i18n:translate="vote_analysis">
     Vote analysis
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=vote_analysis"
        category="workflow"
        i18n:translate="vote_analysis">Vote analysis</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="accept"
              new_state="selected"
              title="accept"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="accept">
  <description i18n:translate="accept">
     Accept
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=accept"
        category="workflow"
        i18n:translate="accept">Accept</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_accepted"
              new_state="selected"
              title="back_accepted"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="back_accepted">
  <description i18n:translate="back_accepted">
     Back accepted
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_accepted"
        category="workflow"
        i18n:translate="back_accepted">Back accepted</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="reject"
              new_state="rejected"
              title="reject"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="reject">
  <description i18n:translate="reject">
     Reject
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=reject"
        category="workflow"
        i18n:translate="reject">Reject</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="study"
              new_state="study_in_progress"
              title="study"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="study">
  <description i18n:translate="study">
     Study
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=study"
        category="workflow"
        i18n:translate="study">Study</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_in_study"
              new_state="study_in_progress"
              title="back_in_study"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="back">
  <description i18n:translate="back_in_study">
     Back in study
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_study"
        category="workflow"
        i18n:translate="back_in_study">Back in study</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="progress"
              new_state="in_progress"
              title="progress"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="progress">
  <description i18n:translate="progress">
     Progress
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=progress"
        category="workflow"
        i18n:translate="progress">Progress</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="back_in_progress"
              new_state="in_progress"
              title="back_in_progress"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="back_in_progress">
  <description i18n:translate="back_in_progress">
     Back in progress
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=back_in_progress"
        category="workflow"
        i18n:translate="back_in_progress">Back in progress</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <transition transition_id="realize"
              new_state="realized"
              title="realize"
              trigger="USER"
              before_script="" after_script=""
              i18n:attributes="realize">
  <description i18n:translate="realize">
     Realize
  </description>
  <action url="%(content_url)s/content_status_modify?workflow_action=realize"
        category="workflow"
        i18n:translate="realize">Realize</action>
  <guard>
    <guard-permission>Modify portal content</guard-permission>
  </guard>
  </transition>

  <variable variable_id="action"         for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    Previous transition
  </description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor"          for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    The ID of the user who performed the last transition
  </description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>

 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description i18n:translate="">
    Provides access to workflow history
  </description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time"           for_catalog="False"
           for_status="True" update_always="True">
  <description i18n:translate="">
    When the previous transition was performed
  </description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
